#!/bin/bash

set -e

VERSION=$(build/linux_amd64 -v | sed 's/devstep version //')
TAG="v${VERSION}"
clear
echo "Will release devstep-cli ${TAG} in 10 seconds"

sleep 10

RELEASE_DIR="build/releases/${TAG}"
mkdir -p $RELEASE_DIR
cp build/darwin_amd64 ${RELEASE_DIR}/
cp build/linux_amd64 ${RELEASE_DIR}/

echo 'Releasing...'

git tag $TAG
git push && git push --tags

gh release create -d -a ${RELEASE_DIR} ${TAG}
